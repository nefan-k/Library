<p style="color: green">
  <%= notice %>
  <nav>
    <%= link_to "Authors", authors_path %> |
    <%= link_to "Genres", genres_path %>
  </nav>
</p>

<h1>Books</h1>



<div>
  <%= form_tag books_path, method: :get do %>
    <%= label_tag :q, "Search:" %>
    <%= text_field_tag :q %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>